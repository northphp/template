{
    "name": "north/template",
    "license": "MIT",
    "description": "A simple template system",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=PSR2 src",
        "format": "vendor/bin/phpcbf --standard=PSR2 src tests",
        "test": "vendor/bin/phpunit"
    }
}